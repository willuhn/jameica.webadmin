<?xml version="1.0" encoding="iso-8859-1"?>

<project basedir=".." default="gwt">

	<path id="compilepath">
		<pathelement location="../jameica/bin/" />
		<pathelement location="../jameica/lib/de_willuhn_ds/de_willuhn_ds.jar" />
		<pathelement location="../jameica/lib/de_willuhn_util/de_willuhn_util.jar" />
		<fileset dir="lib">
			<include name="**/*.jar"/>
		</fileset>
		<path path="src"/>
		<path path="bin"/>
		<path path="../jameica/bin"/>
		<path path="../jameica/src"/>
	</path>

	<target name="gwt">
    <java classname="com.google.gwt.dev.GWTCompiler" fork="true">
      <arg value="-out" />
      <arg value="src/res/gwt" />
      <arg value="de.willuhn.jameica.webadmin.gwt.WebAdmin" />
      <classpath refid="compilepath" />
   </java>
 </target>
</project>
